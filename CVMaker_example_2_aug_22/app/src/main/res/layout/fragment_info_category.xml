<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/category_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/icon_vertical_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginTop="@dimen/icon_vertical_margin"
            android:contentDescription="@string/category_icon"/>

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_toEndOf="@+id/category_icon"
            android:layout_toRightOf="@+id/category_icon"
            android:textAppearance="?attr/textAppearanceListItem"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_toEndOf="@+id/id"
            android:layout_toRightOf="@+id/id"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="20sp"
            android:typeface="serif"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/content"
            android:background="#5b5e5d"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>