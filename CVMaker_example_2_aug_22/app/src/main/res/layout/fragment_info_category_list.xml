<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.example.resume.fragments.InfoCategoryFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.resume.fragments.infocategories.InfoCategoryFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_select_format"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/fragment_info_category" />

    <Button
        android:id="@+id/button_select_format"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/white"
        android:text="@string/select_format"
        android:textColor="@android:color/black" />
</RelativeLayout>