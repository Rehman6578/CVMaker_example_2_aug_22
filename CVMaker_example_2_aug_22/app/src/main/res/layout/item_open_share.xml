<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        >

        <TextView
            android:id="@+id/cv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button_open"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_alignTop="@+id/button_open"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/button_open"
            android:layout_toStartOf="@+id/button_open" />

        <ImageButton
            android:id="@+id/button_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/button_open"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/button_share"
            android:layout_toStartOf="@+id/button_share"
            android:background="@drawable/ic_delete_black_24dp" />

        <ImageButton
            android:id="@+id/button_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
             android:layout_below="@id/button_open"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"

            android:background="@drawable/ic_share" />

        <ImageButton
            android:id="@+id/button_open"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="27dp"
            android:layout_marginRight="22dp"
            android:layout_marginEnd="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_open" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>