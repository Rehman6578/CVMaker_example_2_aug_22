<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape
            android:shape="rectangle" >

            <corners android:radius="10dp" />

            <gradient android:angle="270"
                android:endColor="#9b2196f3"
                android:startColor="#8affffff"
                android:centerColor="#552196f3"/>

            <padding
                android:bottom="2dp"
                android:left="0dp"
                android:right="0dp"
                android:top="2dp" />

            <size
                android:height="20dp"
                android:width="100dp" />

            <stroke
                android:width="2dp"
                android:color="#1579c9" />


        </shape>
    </item>


    <item  >

        <shape
            android:shape="rectangle" >

            <corners android:radius="10dp" />

            <gradient android:angle="270"
                android:endColor="#2196F3"
                android:startColor="#ffffff"
                />

            <padding
                android:bottom="2dp"
                android:left="0dp"
                android:right="0dp"
                android:top="2dp" />

            <size
                android:height="20dp"
                android:width="100dp" />

            <stroke
                android:width="2dp"
                android:color="#1579c9" />


        </shape>
    </item>


</selector>